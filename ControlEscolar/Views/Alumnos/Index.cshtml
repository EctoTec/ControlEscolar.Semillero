    </div>
</div>
<!--TABLA CON DATOS-->
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Matricula</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Carrera</th>
            <th scope="col">Semestre</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="cuerpo_tabla"></tbody>
</table>
