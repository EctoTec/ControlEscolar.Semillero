<br />

<div class="modal fade" id="Ag_Grupo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Agregar Grupo</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group col-sm-12">
                        <label>Materia</label>
                        <select id="S_Materia" class="form-control">
                            <option value="" disabled>Elige una materia</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>Profesor</label>
                        <select id="S_Profesor" class="form-control">
                            <option value="" disabled>Elige un maestro</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>Turno</label>
                        <select class="form-control" id="Turno">
                            <option value="">Elige un turno</option>
                            <option value="M">Matutino</option>
                            <option value="V">Vespertino</option>
                            <option value="N">Nocturno</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="save" onclick="GuardarDatosGrupo();">Guardar</button>
            </div>
        </div>
    </div>
</div>

<table class="table" id="datos">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Materia</th>
            <th>Maestro</th>
            <th>Turno</th>
        </tr>
    </thead>
    <tbody id="datos_Grupo"></tbody>


    <tr class='noSearch hide'>
        <td colspan="4"></td>
    </tr>
</table>

<p>Creado por: S-176</p>

@Scripts.Render("~/bundles/Grupos")

