
@{
    ViewBag.Title = "Grupos";
}

<center>
    <h1>Grupos</h1>
</center>

<div class="container h1 text-center">
    <button class="btn btn-success" data-toggle="modal" data-target="#Ag_Grupo">Agregar Grupo</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Materia</th>
            <th scope="col">Profesor</th>
            <th scope="col">Turno</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="Ag_Grupo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Agregar Grupo</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group col-sm-12">
                        <label>Materia</label>
                        <select class="form-control">
                            <option value="" disabled>Elige una materia</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>Profesor</label>
                        <select class="form-control">
                            <option value="" disabled>Elige un Maestro</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-12">
                        <label>Turno</label>
                        <select class="form-control">
                            <option value="" disabled>Elige un turno</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>