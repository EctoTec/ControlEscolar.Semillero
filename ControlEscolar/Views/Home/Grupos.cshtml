
@{
    ViewBag.Title = "Grupos";
}

<style>
    .hide {
        display: none;
    }

    .red {
        color: red;
    }

    #myInput {
        background-image: url('https://www.w3schools.com/css/searchicon.png');
        background-position: 10px 10px;
        background-repeat: no-repeat;
        width: 100%;
        font-size: 16px;
        padding: 12px 20px 12px 40px;
        border: 1px solid #ddd;
        margin-bottom: 12px;
    }
</style>

<br />

<h1>Grupos</h1>

<div class=".col-12 .col-sm-12 .col-md-12 .col-lg-6 .col-xl-6 text-center">
    <button class="btn btn-success" data-toggle="modal" data-target="#Ag_Grupo">Nuevo Grupo</button>
</div>

<br />

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Buscar por grupos">
