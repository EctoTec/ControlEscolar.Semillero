
@{
    ViewBag.Title = "Materia";
}

<div class="container h1 text-center">
    <button class="btn btn-success" data-toggle="modal" data-target="#Ag_Materia">Agregar Materia</button>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Materia</th>
            <th scope="col">Nivel</th>
            <th scope="col">Carrera</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

<div class="modal fade" id="Ag_Materia" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Materia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group col-sm-12">
                        <label>Materia</label>
                        <input type="text" class="form-control" placeholder="Materia">
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Carrera</label>
                        <select class="form-control">
                            <option value="" disabled>Elige una Carrera</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Area</label>
                        <select class="form-control">
                            <option value="" disabled>Elige una Area</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


