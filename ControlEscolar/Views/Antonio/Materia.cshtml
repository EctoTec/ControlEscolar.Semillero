@{
    ViewBag.Title = "Materia";
}
<style>
    #myInput {
  background-image: url('https://www.w3schools.com/css/searchicon.png');
  background-position: 10px 10px;
  background-repeat: no-repeat;
  width: 100%;
  font-size: 16px;
  padding: 12px 20px 12px 40px;
  border: 1px solid #ddd;
  margin-bottom: 12px;
}
</style>
<div class="container">
    <div>
        <div class="form-group col-sm-6">
            <label for="Nombre_Mat">Materia</label>
            <input id="Nombre_Mat" type="text" class="form-control" placeholder="Materia">
        </div>
        <div class="form-group col-sm-6">
            <label for="Carrera_Mat">Carrera</label>
            <div class="input-group mb-3">
            <select id="Carrera_Mat" class="form-control">
                <option value="" disabled selected>Elige una Carrera</option>
            </select>
                <div class="input-group-append">
                    <button class="btn btn-success" data-toggle="modal" data-target="#Ag_Carrera">Agregar</button>
                </div>
            </div>
        </div>
        <div class="form-group col-sm-6">
            <label for="Area_Mat">Area</label>
            <div class="input-group mb-3">
                <select id="Area_Mat" class="form-control">
                    <option value="" disabled selected>Elige una Area</option>
                </select>
                <div class="input-group-append">
                    <button class="btn btn-success" data-toggle="modal" data-target="#Ag_Area">Agregar</button>
                    </div>
                </div>
            </div>
        </div>
    <button id="Ag_Add_Materia" class="btn btn-success" data-toggle="modal" data-target="#Ag_Materia">Agregar Materia</button>
</div>
<hr>
<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Busca por materias..">

<table class="table" id="table">
    <thead>
        <tr>
            <th scope="col">Materia</th>
            <th scope="col">Nivel</th>
            <th scope="col">Carrera</th>
            <th scope="col">Area</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="T_body_content"></tbody>
</table>

<div class="modal fade" id="Ag_Area" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center" id="exampleModalLabel">Agregar Materia</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group col-sm-12">
                        <label>Area</label>
                        <input id="A_Nombre" type="text" class="form-control" placeholder="Area">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="Ag_Add_Area" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="Ag_Carrera" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title text-center" id="exampleModalLabel">Agregar Materia</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group col-sm-12">
                        <label>Carrera</label>
                        <input id="C_Nombre" type="text" class="form-control" placeholder="Carrera">
                    </div>
                    <div class="form-group col-sm-6">
                        <label>Nivel</label>
                        <select id="C_Nivel" class="form-control">
                            <option value="0" disabled selected>Elige un Nivel</option>
                            <option value="L">Licenciatura</option>
                            <option value="M">Maestria</option>
                            <option value="D">Doctorado</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button id="Ag_Add_Carrera" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Materias")